<!-- ========= Templates ========= -->
<template id="tpl-congregation">
  <div class="display-rows">
    <div class="row"><span class="label">Navn:</span><span class="value" data-bind="officialName"></span></div>
    <div class="row"><span class="label">Kaldenavn:</span><span class="value" data-bind="nickname"></span></div>
    <div class="row"><span class="label">Menighedsnr.:</span><span class="value" data-bind="number"></span></div>
    <div class="row"><span class="label">Adresse:</span><span class="value" data-bind="address"></span></div>
    <div class="row"><span class="label">Kreds:</span><span class="value" data-bind="circuit"></span></div>
    <div class="row"><span class="label">Mødetid:</span><span class="value" data-bind="meetingTime"></span></div>
  </div>
</template>

<template id="tpl-person">
  <div class="display-rows">
    <div class="row"><span class="label">Navn:</span><span class="value" data-bind="name"></span></div>
    <div class="row"><span class="label">Telefonnr.:</span><span class="value" data-bind="phoneText"></span></div>
    <div class="row"><span class="label">Email:</span><span class="value" data-bind="email"></span></div>
    <div class="row" data-if="address"><span class="label">Adresse:</span><span class="value" data-bind="address"></span></div>
  </div>
</template>

<template id="tpl-speaker">
  <h3 data-bind="name"></h3>
  <div class="display-rows">
    <div class="row"><span class="label">Telefonnr.:</span><span class="value" data-bind="phoneText"></span></div>
    <div class="row" data-if="email"><span class="label">Email:</span><span class="value" data-bind="email"></span></div>
    <div class="row"><span class="label">Begravelsesforedrag:</span><span class="value" data-bind="funeralTalkText"></span></div>
    <div class="row"><span class="label">Bryllupsforedrag:</span><span class="value" data-bind="weddingTalkText"></span></div>
    <div class="row"><span class="label">Mindehøjtidsforedrag:</span><span class="value" data-bind="memorialTalkText"></span></div>
    <div class="talks">
      <h4>Foredrag:</h4>
      <div data-slot="talks"></div>
    </div>
  </div>
</template>

<template id="tpl-talkline">
  <div class="display-rows">
    <div class="row"><span class="label" data-bind="language"></span><span class="value" data-bind="numbers"></span></div>
  </div>
</template>
